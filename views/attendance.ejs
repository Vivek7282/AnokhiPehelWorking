<%- include('header'); -%>



<style>
  /* Attendance Sheet Form */

.team {
  background-color: #f8f9fa;
  padding: 60px 0;
}

.team .section-header h2 {
  font-size: 36px;
  margin-bottom: 20px;
  font-weight: 700;
  text-transform: uppercase;
}

.team .section-header p {
  font-size: 18px;
  margin-bottom: 0;
}

.team form {
  margin-top: 30px;
}

.team form div {
  margin-bottom: 20px;
}

.team form label {
  margin-left: 10px;
  font-size: 20px;
}

.team form button {
  margin-top: 20px;
  font-size: 24px;
  padding: 10px 20px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
}

.team form button:hover {
  background-color: #0062cc;
}

</style>
<!-- ======= Team Section ======= -->
<section id="team" class="team">
  <div class="container" data-aos="fade-up">
    <div class="section-header">
      <h2>Attendance Sheet</h2>
      <p><%= className %></p>
    </div>
    <form method="post" action="/attendance1/<%= className %>">

      <% for (let i = 0; i < data.length; i++) { %>
      <div>
        <input type="hidden" name="studentId" value="<%= data[i]._id %>">
        <input type="hidden" name="name" value="<%= data[i].name %>">
        <input type="checkbox" name="present" value="<%= data[i]._id %>">
        <label><%= data[i].name %></label>
      </div>
      <% } %>
      <button type="submit">Submit</button>
    </form>
  </div>
</section><!-- End Team Section -->





<%- include('footer'); -%>